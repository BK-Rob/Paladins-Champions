<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:background="@color/colorPrimary"
    android:paddingEnd="10dp"
    android:paddingStart="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <RelativeLayout
            android:id="@+id/layout_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true">

            <ImageView
                android:id="@+id/champion_image"
                android:layout_width="50dp"
                android:layout_height="50dp" />

            <TextView
                android:id="@+id/champion_name"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="5dp"
                android:layout_toEndOf="@id/champion_image"
                android:fontFamily="sans-serif-smallcaps"
                android:padding="2dp"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textStyle="italic"
                tools:text="Skye" />

        </RelativeLayout>

        <!-- MASTERY -->
        <RelativeLayout
            android:id="@+id/layout_mastery"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@id/layout_image"
            android:padding="5dp">

            <TextView
                android:id="@+id/mastery_level"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:padding="2dp"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textStyle="bold"
                tools:text="10" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/mastery_level"
                android:layout_centerHorizontal="true"
                android:text="MASTERY"
                android:textColor="@color/white" />
        </RelativeLayout>

        <!-- WINRATE -->
        <RelativeLayout
            android:id="@+id/layout_winrate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@id/layout_mastery"
            android:padding="5dp">

            <TextView
                android:id="@+id/champion_winrate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:padding="2dp"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textStyle="bold"
                tools:text="66.7%" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/champion_winrate"
                android:layout_centerHorizontal="true"
                android:text="WINRATE"
                android:textColor="@color/white" />
        </RelativeLayout>

        <!-- KDA -->
        <RelativeLayout
            android:id="@+id/layout_kda"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@id/layout_winrate"
            android:padding="5dp">

            <TextView
                android:id="@+id/champion_kda"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:padding="2dp"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textStyle="bold"
                tools:text="3.4" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/champion_kda"
                android:layout_centerHorizontal="true"
                android:text="KDA"
                android:textColor="@color/white" />
        </RelativeLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toEndOf="@id/layout_kda"
            android:layout_centerVertical="true"
            android:layout_marginStart="5dp"
            app:srcCompat="@drawable/ic_arrow_white" />
    </RelativeLayout>
</RelativeLayout>